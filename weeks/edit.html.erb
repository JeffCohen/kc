<h1>Editing Week #<%= @week.id %></h1>

<%= form_tag(week_url(@week), method: 'patch') do %>
  <div>
    <%= label_tag :number %><br />
    <%= number_field_tag :number, @week.number %>
  </div>

  <div>
    <%= label_tag :title %><br />
    <%= text_field_tag :title, @week.title %>
  </div>

  <div>
    <%= label_tag :subtitle %><br />
    <%= text_field_tag :subtitle, @week.subtitle %>
  </div>

  <div>
    <%= label_tag :repo_url %><br />
    <%= text_field_tag :repo_url, @week.repo_url %>
  </div>

  <div>
    <%= submit_tag "Update Week" %>
  </div>
<% end %>
